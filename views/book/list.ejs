<%- include('../partials/header.ejs') %>

<%- include('../partials/main_nav.ejs') %>

  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <% if (typeof displayName == 'string' && displayName) { %>
                <a href="/book-list/add" class="btn btn-primary" role="button">
                    <i class="fas fa-plus-circle">Add a Book</i>
                </a>
            <% } %>
            
            <br />
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row -->
                <tr>
                    <th class="text-center col-2">Title</th>
                    <th class="text-center col-2">Author</th>
                    <th class="text-center col-1">Year</th>
                    <th class="col-6">Decription</th>
                    <th class="text-center col-1">Price</th>
                    <% if (typeof displayName == 'string' && displayName) { %>
                        <th class="text-center col-2"></th>
                        <th class="text-center col-2"></th>
                    <% } %>
                </tr>
                <!-- Repeatable Template Row -->
               <% for(let counter = 0; counter < BookList.length; counter++) { %>
                    <tr>
                        <td class="text-center col-2"><%= BookList[counter].name %></td>
                        <td class="text-center col-2"><%= BookList[counter].author %></td>
                        <td class="text-center col-1"><%= BookList[counter].published %></td>
                        <td class="col-6"><%= BookList[counter].description %></td>
                        <td class="text-center col-1"><%= BookList[counter].price %></td>
                        <% if (typeof displayName == 'string' && displayName) { %>
                            <td class="text-center col-2">
                                <a href="/book-list/edit/<%= BookList[counter]._id %>" class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i>Edit</a>
                            </td>
                            <td class="text-center col-2">
                                <a href="/book-list/delete/<%= BookList[counter]._id %>" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i>Delete</a>
                            </td>
                        <% } %>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>

<%- include('../partials/bottom_nav.ejs') %>

<%- include('../partials/footer.ejs') %>